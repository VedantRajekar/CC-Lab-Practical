%{
#include "y.tab.h"
%}

%%

"for"           { return FOR; }
"("             { return LPAREN; }
")"             { return RPAREN; }
";"             { return SEMICOLON; }
"<"             { return LT; }
">"             { return GT; }
"="             { return ASSIGN; }
"+"             { return PLUS; }
"-"             { return MINUS; }
"*"             { return MUL; }
"/"             { return DIV; }
[a-zA-Z_][a-zA-Z0-9_]* { return ID; }
[0-9]+          { return NUM; }
[ \t\n]         ;   /* ignore whitespace */
.               { return yytext[0]; }

%%

int yywrap() { return 1; }
